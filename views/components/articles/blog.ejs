<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <script src="./routes/articles.js"></script>
</head>
<body>
  <%- include("../../partials/header.ejs") %>
  <div class="container">
    <h1 class="mb-4">My Blog</h1>
    <a href="/blog/new" class="btn btn-success">New Blog</a>

    <% blog.forEach(post => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= post.title %></h4>
          <div class="card-subtitle text-muted mb-2">
            <%= post.date.toLocaleDateString() %>
          </div>
          <div class="card-text mb-2"><%= post.description %></div>
          <a href="/articles/<%= post.id %>" class="btn btn-primary">View</a>
          <a href="/articles/<%= post.id %>/edit" class="btn btn-warning">Edit</a>
          <form action="/articles/<%= post.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div> 
    <% }) %>
  </div>
  <a style="margin-top: 20px;"><%- include("../../partials/footer.ejs") %></a>
</body>
</html>